{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Modpack (TypeScript)",
            "type": "shell",
            "command": "nix develop --command npm run build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Sync ProbeJS Types",
            "type": "shell",
            "command": "nix develop --command npm run types:sync",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Distribution Package (.zip)",
            "type": "shell",
            "command": "nix develop --command npm run build:pack",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean Compiled Scripts",
            "type": "shell",
            "command": "nix develop --command npm run clean",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
